<div class="">
    
    <EditForm Model="@Context" OnValidSubmit="@Save">
        <DataAnnotationsValidator/>
        <ValidationSummary/>
        <InputText @bind-Value="@Context.Name"/>

        <div class="d-flex justify-content-end mt-2">
            <button class="btn btn-primary">Save</button>
            <div class="btn btn-danger" @onclick="@Cancel">Cancel</div>
        </div>
    </EditForm>
    
</div>


@code
{
    [CascadingParameter] public BlazoredModalInstance Modal { get; set; }

    [Parameter] public Product Context { get; set; }

    private async Task Save()
    {
        await Modal.CloseAsync(ModalResult.Ok<Product>(Context));
    }

    private async Task Cancel()
    {
        await Modal.CancelAsync();
    }
    
}